{
  "name": "Fetch pets by status",
  "baseUrl": "{{baseUrl}}",
  "defaultHeaders": {
    "Accept": "application/json"
  },
  "variables": {
    "baseUrl": "https://petstore.swagger.io/v2",
    "accessToken": ""
  },
  "endpoint": {
    "method": "GET",
    "path": "/pet/findByStatus"
  },
  "testcases": [
    {
      "id": "TC-001",
      "name": "Retrieve pets with a valid status: available",
      "method": "GET",
      "path": "/pet/findByStatus",
      "query": {
        "status": [
          "available"
        ]
      },
      "headers": {
        "Accept": "application/json"
      },
      "body": null,
      "requiresAuth": false,
      "expectedStatus": 200,
      "assertions": [
        {
          "type": "status",
          "equals": 200
        },
        {
          "type": "header_present",
          "name": "Content-Type"
        },
        {
          "type": "content_type_includes",
          "value": "application/json"
        },
        {
          "type": "json_is_array"
        },
        {
          "type": "json_array_min_length",
          "min": 1
        },
        {
          "type": "json_path_exists",
          "path": "[0].id"
        }
      ]
    },
